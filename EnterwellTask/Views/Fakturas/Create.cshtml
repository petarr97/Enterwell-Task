    label{
        height:10%;
        font-weight:bold;
    }
    .data-div {
        margin-top: 3%;
        background-color: #f0f0f0;
    }
    th{
        background-color:lightgrey;
    }
    .stavke-div {
        background-color: #f0f0f0;
    }
    .btn-success {
        background-color: #659490;
    }
    
</style>